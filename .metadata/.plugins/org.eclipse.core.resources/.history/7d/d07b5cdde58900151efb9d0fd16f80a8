//--------------------------------------------------------------------------------------------------
//=== Includes =====================================================================================
//--------------------------------------------------------------------------------------------------
#include <stdint.h>
#include "DRIVERS/HwConfig.h"	// Hardware Abstraction Layer Drivers
#include "LIBS/Led.h"
#include "LIBS/SysTick.h"

//--------------------------------------------------------------------------------------------------
//=== Main =========================================================================================
//--------------------------------------------------------------------------------------------------
int main(void)
{
	// Inizializzazioni
	LedInit();

	// Autodiagnostica

	// Ciclo infinito
	for(;;)
	{
		Led1On();
		DelayMs(100);
		LedGreenOff();
		DelayMs(900);
	}
}
//--------------------------------------------------------------------------------------------------
